<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- Default Main Template -->
	<definition name="mainTemplate" template="/WEB-INF/templates/main.jspx">
		<put-attribute name="header" value="/WEB-INF/templates/header.jspx" />
		<put-attribute name="footer" value="/WEB-INF/templates/footer.jspx" />
		<put-attribute name="menu" value="/WEB-INF/templates/menu.jspx" />
		<put-attribute name="content" value="/WEB-INF/jsp/blank.jspx" /> 
	</definition>
	
	<definition name="home" extends="mainTemplate">    
     	<put-attribute name="content" value="/WEB-INF/jsp/home.jspx" /> 
   </definition>

	
	<definition name="query/form" extends="mainTemplate"> 
	     <put-attribute name="content" value="/WEB-INF/jsp/query/form.jspx" /> 
   	</definition>

</tiles-definitions>

